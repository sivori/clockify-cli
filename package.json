{
  "name": "clockify-cli",
  "version": "1.0.0",
  "description": "Command-line time tracking with Clockify API",
  "main": "dist/cli.js",
  "bin": {
    "clockify": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "security": "npm audit && snyk test",
    "security:fix": "npm audit fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run test && npm run security"
  },
  "keywords": [
    "clockify",
    "time-tracking",
    "cli",
    "productivity",
    "timer"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/clockify-cli.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/clockify-cli/issues"
  },
  "homepage": "https://github.com/yourusername/clockify-cli#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "conf": "^11.0.2",
    "date-fns": "^2.30.0",
    "inquirer": "^9.3.7",
    "joi": "^17.11.0",
    "keytar": "^7.9.0",
    "node-localstorage": "^3.0.5",
    "ora": "^7.0.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.17.50",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^14.0.0",
    "snyk": "^1.1200.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "jest --findRelatedTests --passWithNoTests"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
